{
  "name": "v2-palm",
  "version": "0.1.0",
  "description": "Arrakis V2 PALM contracts",
  "scripts": {
    "build": "yarn compile && npx tsc",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile --force",
    "deploy": "npx hardhat deploy",
    "format": "prettier --write '*/**/*.*{js,sol,json,md,ts}'",
    "format:check": "prettier --check '*/**/*.*{js,sol,json,md,ts}'",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:ts": "eslint -c .eslintrc.json --ext \"**/*.ts\" \"**/*.test.ts\"",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "test": "npx hardhat test",
    "verify": "npx hardhat etherscan-verify",
    "script-openTerm": "npx hardhat run ./scripts/openTerm.ts",
    "script-setData": "npx hardhat run ./scripts/setVaultData.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArrakisFinance/v2-palm"
  },
  "license": "ISC",
  "devDependencies": {
    "@arrakisfi/v2-core": "0.2.0",
    "@arrakisfi/v3-lib-0.8": "0.1.3",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "3.1.0",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@openzeppelin/contracts": "4.7.3",
    "@openzeppelin/contracts-upgradeable": "4.7.3",
    "@tsconfig/recommended": "1.0.1",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "6.1.2",
    "@types/chai": "4.3.3",
    "@types/mocha": "9.1.1",
    "@types/node": "18.7.14",
    "@typescript-eslint/eslint-plugin": "5.36.1",
    "@typescript-eslint/parser": "5.36.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-core": "^1.0.0",
    "chai": "4.3.4",
    "dotenv": "16.0.2",
    "eslint": "8.23.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.7.0",
    "hardhat": "2.10.1",
    "hardhat-deploy": "0.11.12",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "pinst": "^3.0.0",
    "prettier": "2.7.1",
    "prettier-plugin-solidity": "1.0.0-beta.24",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.1",
    "typechain": "8.1.0",
    "typescript": "4.8.2",
    "solidity-coverage": "0.7.21"
  },
  "lint-staged": {
    "*.*{js,sol,json,md,ts,yml,yaml}": "prettier --write",
    "*.*{ts,js}": "eslint -c .eslintrc.json"
  }
}
